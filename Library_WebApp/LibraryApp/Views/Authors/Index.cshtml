@model LibraryApp.Models.AuthorsViewModel

@{
    ViewData["Title"] = "Autorzy";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Dodaj autora</a>
</p>

<button type="button" class="collapsible">Filtrowanie</button>
<div class="content">
    <form asp-action="Index" asp-route-id="" method="get">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="NameFilter"></label>
                <input asp-for="NameFilter" class="form-control" value="@Model.NameFilter">
                <span asp-validation-for="NameFilter" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CountryFilter"></label>
                <input asp-for="CountryFilter" class="form-control" value="@Model.CountryFilter">
                <span asp-validation-for="CountryFilter" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-primary mb-2">Wyszukaj</button>
        </div>
    </form>
</div>

<div class="row">

    <div class="table-responsive col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-OrderBy="@ViewData["FirstNameSortParam"]"
                           asp-route-DetailOrderBy="@ViewData["DetailOrderBy"]"
                           asp-route-NameFilter="@Model.NameFilter"
                           asp-route-CountryFilter="@Model.CountryFilter">Imię</a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-OrderBy="@ViewData["LastNameSortParam"]"
                           asp-route-DetailOrderBy="@ViewData["DetailOrderBy"]"
                           asp-route-NameFilter="@Model.NameFilter"
                           asp-route-CountryFilter="@Model.CountryFilter">Nazwisko</a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Authors) {
                    var selectedRow = "";
                    if (Model.Selection != null && item.Id == Model.Selection.Id) {
                        selectedRow = "table-success";
                    }
                    <tr class="@selectedRow">
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td align="right">
                            <a asp-action="Index" asp-route-id="@item.Id"
                               asp-route-OrderBy="@ViewData["OrderBy"]"
                               asp-route-DetailOrderBy="@ViewData["DetailOrderBy"]"
                               asp-route-NameFilter="@Model.NameFilter"
                               asp-route-CountryFilter="@Model.CountryFilter">Szczegóły</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="table-responsive col">
        @if (Model.Selection != null) {
            <table class="table table-borderless">
                <tr>
                    <td>
                        <h2>@Model.Selection.FirstName&nbsp;@Model.Selection.LastName</h2>
                    </td>
                    <td align="right">
                        <a>Przeglądaj zasoby</a> |
                        <a asp-action="Edit" asp-route-id="@Model.Selection.Id">Edytuj</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Selection.Id">Usuń</a>
                    </td>
                </tr>
            </table>
            @if (!string.IsNullOrEmpty(Model.Selection.Country)) {
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Kraj:
                        </dt>
                        <dd>
                            @Model.Selection.Country
                        </dd>
                    </dl>
                </div>
            }

            <div class="table-responsive">
                <h4>Książki</h4>
                <p>
                    <a asp-controller="Books" asp-action="Create">Dodaj książkę</a>
                </p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Index"
                                   asp-route-OrderBy="@ViewData["OrderBy"]"
                                   asp-route-DetailOrderBy="@ViewData["TitleSortParam"]"
                                   asp-route-NameFilter="@Model.NameFilter"
                                   asp-route-CountryFilter="@Model.CountryFilter">Tytuł</a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-OrderBy="@ViewData["OrderBy"]"
                                   asp-route-DetailOrderBy="@ViewData["GenreSortParam"]"
                                   asp-route-NameFilter="@Model.NameFilter"
                                   asp-route-CountryFilter="@Model.CountryFilter">Gatunek</a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Books) {
                            <tr>
                                <td>
                                    <a asp-controller="Books" asp-action="Index" asp-route-id="@item.Id">@item.Title</a>
                                </td>
                                <td>
                                    @item.Genre
                                </td>
                                <td align="right">
                                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

</div>
