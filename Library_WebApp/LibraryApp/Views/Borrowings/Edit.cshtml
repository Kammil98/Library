@model LibraryApp.Models.Borrowing

@{
    ViewData["Title"] = "Edytuj element";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserLogin" />
            <input type="hidden" asp-for="CopyId" />
            <h2>@Model.Copy.Edition.Book.Title</h2>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Wypożyczający:
                </dt>
                <dd>
                    @Model.UserLoginNavigation.LoginNavigation.LastName&nbsp;@Model.UserLoginNavigation.LoginNavigation.FirstName
                    <br />
                    @Model.UserLogin
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="BorrowDate" class="control-label">Data wypożyczenia</label>
                <input asp-for="BorrowDate" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Data zwrotu</label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary mb-2" />
                <button class="btn btn-secondary mb-2" asp-action="Index" asp-route-id="@Model.CopyId" formnovalidate>Anuluj</button>
                @if (ViewBag.errMsg != null) {
                    <span class="text-danger">@ViewBag.errMsg</span>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
