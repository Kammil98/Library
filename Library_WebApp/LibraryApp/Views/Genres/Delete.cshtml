@model LibraryApp.Models.Genre

@{
    ViewData["Title"] = "Usuń gatunek";
}

<h1>@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć ten gatunek?</h3>
<div>
    <h2>@Model.Name</h2>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Usuń" class="btn btn-danger mb-2" />
        <button class="btn btn-secondary mb-2" asp-action="Index">Anuluj</button>
        <div>
            @if (ViewBag.errMsg != null) {
                <span class="text-danger">@ViewBag.errMsg</span>
            }
        </div>
    </form>
</div>
