@model LibraryApp.Models.Reader

@{
    ViewData["Title"] = "Usuń czytelnika";
}

<h1>@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć tego czytelnika?</h3>
<div>
    <h2>@Model.Login</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imię:
        </dt>
        <dd>
            @Model.LoginNavigation.FirstName
        </dd>
        <dt>
            Nazwisko:
        </dt>
        <dd>
            @Model.LoginNavigation.LastName
        </dd>
        <dt>
            Data urodzenia:
        </dt>
        <dd>
            @Model.BirthDate.ToString("d")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Login" />
        <input type="submit" value="Usuń" class="btn btn-danger mb-2" />
        <button class="btn btn-secondary mb-2" asp-action="Index">Anuluj</button>
        <div>
            @if (ViewBag.errMsg != null) {
                <span class="text-danger">@ViewBag.errMsg</span>
            }
        </div>
    </form>
</div>
