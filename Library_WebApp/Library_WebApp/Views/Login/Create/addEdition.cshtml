@model Library_WebApp.Models.Edition

@{
    ViewData["Title"] = "addEdition";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Dodaj Wydanie</h2>

<h4>Wydanie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addEdition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="title" class="control-label">tytuł</label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="releaseDate" class="control-label">data wydania</label>
                <input asp-for="releaseDate" class="form-control" />
                <span asp-validation-for="releaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="publishingHouse" class="control-label">wydawnictwo</label>
                <input asp-for="publishingHouse" class="form-control" />
                <span asp-validation-for="publishingHouse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
