@model Library_WebApp.Models.EditionDataViewModel

@{
    ViewData["Title"] = "Dane Wydania";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Wydanie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addEdition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="edition.bookId" class="control-label">Książka</label>
                @Html.DropDownListFor(m => m.edition.bookId, Model.Books, "Wybierz tytuł", new { @class = "form-control" })
                <span asp-validation-for="edition.bookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edition.releaseDate" class="control-label"></label>
                <input asp-for="edition.releaseDate" class="form-control" />
                <span asp-validation-for="edition.releaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edition.publishingHouseId" class="control-label">Wydawnictwo</label>
                @Html.DropDownListFor(m => m.edition.publishingHouseId, Model.PublishingHouses, "Wybierz wydawnictwo", new { @class = "form-control" })
                <span asp-validation-for="edition.publishingHouseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
