@model Library_WebApp.Models.Genre

@{
    ViewData["Title"] = "addGenre";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Dane Gatunku</h2>

<h4>Gatunek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
