@model Library_WebApp.Models.LibrarianDataViewModel

@{
    ViewData["Title"] = "addLibrarian";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Dane Bibliotekarza</h2>

<h4>Bibliotekarz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addLibrarian">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="librarian.dateOfHire" class="control-label"></label>
                <input asp-for="librarian.dateOfHire" class="form-control" />
                <span asp-validation-for="librarian.dateOfHire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.libraryBranchNumber" class="control-label"></label>
                @Html.DropDownListFor(m => m.librarian.libraryBranchNumber, Model.libraryBranchIds, "Wybierz numer filii", new { @class = "form-control" })
                <span asp-validation-for="librarian.libraryBranchNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.name" class="control-label"></label>
                <input asp-for="librarian.name" class="form-control" />
                <span asp-validation-for="librarian.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.lastName" class="control-label"></label>
                <input asp-for="librarian.lastName" class="form-control" />
                <span asp-validation-for="librarian.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.login" class="control-label"></label>
                <input asp-for="librarian.login" class="form-control" />
                <span asp-validation-for="librarian.login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.password" class="control-label"></label>
                <input asp-for="librarian.password" type="password" class="form-control" />
                <span asp-validation-for="librarian.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarian.passwordRepeat" class="control-label"></label>
                <input asp-for="librarian.passwordRepeat" type="password" class="form-control" />
                <span asp-validation-for="librarian.passwordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
