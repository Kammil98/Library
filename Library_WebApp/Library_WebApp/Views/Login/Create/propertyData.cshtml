@model Library_WebApp.Models.Property

@{
    ViewData["Title"] = "addProperty";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Dane Własności</h2>

<h4>Własność</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="authorFirstName" class="control-label">imię autora</label>
                <input asp-for="authorFirstName" class="form-control" />
                <span asp-validation-for="authorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="authorLastName" class="control-label">nazwisko autora</label>
                <input asp-for="authorLastName" class="form-control" />
                <span asp-validation-for="authorLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="title" class="control-label">tytuł książki</label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
