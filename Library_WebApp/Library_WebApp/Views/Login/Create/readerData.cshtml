@model Library_WebApp.Models.Reader

@{
    ViewData["Title"] = "addReader";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Dane Czytelnika</h2>

<h4>Czytelnik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addReader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dateOfBirth" class="control-label">data urodzenia</label>
                <input asp-for="dateOfBirth" class="form-control" />
                <span asp-validation-for="dateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label">imię</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label">nazwisko</label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="login" class="control-label">login</label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">hasło</label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="passwordRepeat" class="control-label">powtórz hasło</label>
                <input asp-for="passwordRepeat" class="form-control" />
                <span asp-validation-for="passwordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
