@model Library_WebApp.Models.Borrow

@{
    ViewData["Title"] = "showBorrow";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Szczegółowe dane wypożyczenia</h2>

<div>
    <h4>Wypożyczenie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.borrowDate):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.borrowDate)
        </dd>
        @if (Model.returnDate != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.returnDate):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.returnDate)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.volumeId):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.volumeId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.userLogin):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.userLogin)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "editBorrow", new { id = Model.id }, null) |
    <a asp-action="borrowList">Wróć do listy</a>
</div>
