@model Library_WebApp.Models.Librarian

@{
    ViewData["Title"] = "showLibrarian";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Szczegółowe dane bibliotekarza</h2>

<div>
    <h4>Bibliotekarz</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.dateOfHire):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.dateOfHire)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.libraryBranchNumber):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.libraryBranchNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.name):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.lastName):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.login):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.login)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.password):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "editLibrarian", new { login = Model.login }, null) |
