@model Library_WebApp.Models.ShowPropertyViewModel

@{
    ViewData["Title"] = "showProperty";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Szczegółowe dane własności</h2>

<div>
    <h4>Własność</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.bookTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.bookTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Authors):
        </dt>
        <dd>
            @foreach (var author in Model.Authors)
            {
                @author
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "editProperty", new { id = Model.property.id }, null) |
    <a asp-action="propertyList">Wróć do listy</a>
</div>
