@model IEnumerable<Library_WebApp.Models.Edition>

@{
    ViewData["Title"] = "editionList";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Wydania</h2>

<p>
    <a asp-action="addEdition">Dodaj nowe wydanie</a>
</p>

@using (Html.BeginForm("editionList"))
{
    <input type="text" name="phrase" />
    <input type="submit" value="Wyszukaj" class="btn btn-default" />
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.releaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publishingHouseId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.releaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.publishingHouseId)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "editEdition", item, null) |
                    @Html.ActionLink("Szczegóły", "showEdition", item, null) |
                    @Html.ActionLink("Usuń", "deleteEdition", item, null)
            </tr>
        }
    </tbody>
</table>
