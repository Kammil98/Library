@model IEnumerable<Library_WebApp.Models.Librarian>

@{
    ViewData["Title"] = "librarianList";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
}

<h2>Bibliotekarze</h2>

<p>
    <a asp-action="addLibrarian">Dodaj nowego bibliotekarza</a>
</p>

@using (Html.BeginForm("labrarianList"))
{
    <input type="text" name="phrase" />
    <input type="submit" value="Wyszukaj" class="btn btn-default" />
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dateOfHire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.libraryBranchNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dateOfHire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.libraryBranchNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "editLibrarian", item, null) |
                    @Html.ActionLink("Szczegóły", "showLibrarian", item, null) |
                    @Html.ActionLink("Usuń", "deleteLibrarian", item, null)
                </td>
            </tr>
        }
    </tbody>
</table>
