@model Library_WebApp.Models.Borrow

@{
    ViewData["Title"] = "addBorrow";
    Layout = "~/Views/Shared/_Layout_Logged_In.cshtml";
    
}

<h2>Dodaj wypożyczenie</h2>

<h4>Wypożyczenie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addBorrow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="borrowDate" class="control-label"></label>
                <input asp-for="borrowDate" class="form-control" />
                <span asp-validation-for="borrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć na stronę główną</a>
</div>

